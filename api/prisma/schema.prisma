generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  PHOTOGRAPHER
  DEV
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  username  String?   @unique
  role      Role      @default(USER)
  isMember  Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  photos Photo[]

  @@map("users")
}

model Image {
  id        String    @id @default(cuid())
  image     String
  label     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("images")
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String
  image       String?
  lieu        String
  date        DateTime
  recurrence  String?
  onlyUsers   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  photos Photo[]

  @@map("events")
}

model Photo {
  id        String    @id @default(cuid())
  image     String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags      String[]  @default([])
  eventId   String?
  event     Event?    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("photos")
}

model PhotoTag {
  name String @id

  @@map("photo_tags")
}

model Partner {
  id        String    @id @default(cuid())
  name      String    @unique
  description String
  image     String?
  websiteUrl String?
  promoCode String?
  promotionalText String?
  order     Int       @default(0)

  @@map("partners")
}
